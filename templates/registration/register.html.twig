{% extends 'baseBis.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}<!-------------------FORMULAIRE D'ENREGISTREMENT-------------------->
    <h1 class="userForm">INSCRIPTION NOUVEAU MEMBRE</h1>
<form class="registerform" method="post" enctype="multipart/form-data">
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.name, {
            label: 'Prénom',
             'attr':{'class': 'toto'}
        }) }}
        {{ form_row(registrationForm.lastname, {
            label: 'Nom de famille'
        }) }}
        {{ form_row(registrationForm.phone, {
             label: 'Num de téléphone'
        }) }}
        {{ form_row(registrationForm.age, {
            label: 'Votre âge'
        }) }}
        {{ form_row(registrationForm.num_license, {
            label: 'Votre n° de licence'
        }) }}
        {{ form_row(registrationForm.num_transpondeur, {
            label: 'Votre n° de transpondeur'
        }) }}
         {{ form_row(registrationForm.media, {
        label: 'Votre photo'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
           label: 'Accepter les conditions'
        }) }}

        <button type="submit" class="btn">Enregistrez vous</button>
    {{ form_end(registrationForm) }}
</form>
{% endblock %}
